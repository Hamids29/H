Platform Procedure Qty :=
VAR CurrPlat =
    SELECTEDVALUE ( Platform[platform] )
RETURN
SUMX (
    FILTER (
        ALL ( Procedure ),   -- removes relationship filter so LPS rows are visible
        Procedure[column 0] = CurrPlat
            ||
        (
            Procedure[column 0] = "LPS"
            && CONTAINSSTRING ( Procedure[column 6], CurrPlat )
        )
    ),
    Procedure[procedure_qty]
)
